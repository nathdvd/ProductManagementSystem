<%- include('header.ejs') %>

<div class="container-fluid">
    <div class="row mx-auto justify-content-center">
        <div class="col-3 text-center"><img src="/images/banner2.png" class="img-fluid my-4 w-75" alt="banner"></div>
        <div class="col-6">
            <div class="row mt-5">
                <div class="input-group border border-3 rounded search-input-group">
                    <input type="text" class="form-control search-input rounded" placeholder="Search"
                        aria-describedby="search-icon" />
                    <span class="input-group-text bg-transparent border-0 text-red" id="search-icon"><i class="fa fa-search"></i></span>
                  </div>
            </div>
            <div id="carousel" class="carousel slide my-4" data-bs-ride="true">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/images/image1.png" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/images/image2.png" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/images/image3.png" class="d-block w-100" alt="...">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            <div class="d-flex justify-content-evenly">
                <div class="d-grid col-5 mx-auto">
                    <button class="btn btn-danger" type="button">COOPERATIVE</button>
                </div>
                <div class="d-grid col-5 mx-auto">
                    <button class="btn btn-danger" type="button">DISPLAY CENTER</button>
                </div>
            </div>
            <div class="mt-4 d-flex justify-content-center">
                <div class="d-grid col-5 mx-auto">
                    <button class="btn btn-danger" type="button">CANTEEN</button>
                </div>
            </div>
        </div>
    <div class="col-3 text-center"><img src="/images/banner1.png" class="img-fluid my-4 w-75" alt="banner"></div>
</div>

</body>
</html>