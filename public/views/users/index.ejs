<%- include('head-files.ejs') %>
</head>
<%- include('header.ejs', {user: user, loggedIn: loggedIn, page: page}) %>
    <div class="grid grid-cols-5 py-12">
        <div><img src="/images/banner1.png" class="px-8" alt="banner"></div>
        <div class="col-span-3 px-12">
            <div class="flex mb-8">
                <form action="" class="w-full" method="post">
                    <div class="flex relative items-center">
                        <input type="text" name="search" id="search" autocomplete="off" placeholder="Search" class="w-full pl-4 pr-12 py-2 border-2 rounded-md border-red-700 focus:outline-none">
                        <i class="fa fa-search absolute right-4 text-red-800 cursor-pointer" id="search-icon"></i>
                    </div>
                </form>
            </div>
            <div id="carousel" class="carousel slide relative mb-4" data-bs-ride="carousel">
                <div class="carousel-indicators absolute right-0 bottom-0 left-0 flex justify-center p-0 mb-4">
                    <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner relative w-full overflow-hidden">
                    <div class="carousel-item active float-left w-full">
                        <img src="/images/displaycenter.png" class="block w-full"/>
                    </div>
                    <div class="carousel-item float-left w-full">
                        <img src="/images/cooperative.png" class="block w-full"/>
                    </div>
                    <div class="carousel-item float-left w-full">
                        <img src="/images/canteen.png" class="block w-full"/>
                    </div>
                </div>
                <button class="carousel-control-prev absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline left-0" type="button" data-bs-target="#carousel" data-bs-slide="prev" >
                    <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline right-0" type="button" data-bs-target="#carousel" data-bs-slide="next" >
                    <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="flex justify-around mb-2 gap-8">
                <button class="flex-1 py-2 bg-red-700 text-white rounded-md">COOPERATIVE</button>
                <button class="flex-1 py-2 bg-red-700 text-white rounded-md">DISPLAY CENTER</button>
            </div>
            <div class="flex justify-center">
                <button class="flex-1 mx-64 py-2 bg-red-700 text-white rounded-md">CANTEEN</button>
            </div>
        </div>
        <div><img src="/images/banner2.png" class="px-8" alt="banner"></div>
    </div>

</body>
</html>